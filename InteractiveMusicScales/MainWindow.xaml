<Window x:Class="InteractiveMusicScales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractiveMusicScales"
        xmlns:i="clr-namespace:InteractiveMusicScales.Interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="436" Width="232">
    <Window.Resources>
        
        <!--NoteButton Style and Triggers-->
        <Style TargetType="i:NoteButton">
            <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource Self}, Path=Note}"/>
            <Setter Property="Command" Value="{Binding NoteCommand}"/>
            <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}, Path=Note}"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Note.IsChecked}" Value="True">
                    <Setter Property="Background" Value="LightCoral"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Note.IsKeynote}" Value="True">
                    <Setter Property="FontWeight" Value="ExtraBold"/>
                </DataTrigger>
                
            </Style.Triggers>
            
        </Style>
        
        
    </Window.Resources>
    <StackPanel>

        <i:NoteButton Note="{Binding Pianoroll[0]}"/>
        <i:NoteButton Note="{Binding Pianoroll[1]}"/>
        <i:NoteButton Note="{Binding Pianoroll[2]}"/>
        <i:NoteButton Note="{Binding Pianoroll[3]}"/>
        <i:NoteButton Note="{Binding Pianoroll[4]}"/>
        <i:NoteButton Note="{Binding Pianoroll[5]}"/>
        <i:NoteButton Note="{Binding Pianoroll[6]}"/>
        <i:NoteButton Note="{Binding Pianoroll[7]}"/>
        <i:NoteButton Note="{Binding Pianoroll[8]}"/>
        <i:NoteButton Note="{Binding Pianoroll[9]}"/>
        <i:NoteButton Note="{Binding Pianoroll[10]}"/>
        <i:NoteButton Note="{Binding Pianoroll[11]}"/>

    </StackPanel>
</Window>
