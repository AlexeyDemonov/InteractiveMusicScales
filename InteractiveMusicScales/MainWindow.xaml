<Window x:Class="InteractiveMusicScales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractiveMusicScales"
        xmlns:i="clr-namespace:InteractiveMusicScales.Interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Window.Resources>

        <!--Converters-->
        <i:SharpNoteNameConverter x:Key="SharpNotes"/>
        <i:FlatNoteNameConverter  x:Key="FlatNotes"/>
        <i:HiddenNoteNameConverter x:Key="HiddenNotes"/>
        <i:SemitoneToBoolConverter x:Key="SemitoneToBool"/>
        <i:BoolToHeightConverter   x:Key="BoolToHeight"/>
        <i:ScalesToScaleButtonsConverter x:Key="ScalesToButtons"/>

        <!--Colors-->
        <SolidColorBrush x:Key="MenuColor">#B4B4B4</SolidColorBrush>
        <SolidColorBrush x:Key="Background">#D3D3D3</SolidColorBrush>

        <!--Base Note/Scale button style-->
        <Style x:Key="BaseForNoteAndScaleButtons" TargetType="Button">
            
            <!--Template rework for changing 'mouse over' highlight effect-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="0.5" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            
        </Style>
        
        <!--NoteButton Style and Triggers-->
        <Style x:Key="MainNoteButtonStyle" TargetType="i:NoteButton" BasedOn="{StaticResource BaseForNoteAndScaleButtons}">

            <!--Static properties-->
            <Setter Property="Focusable" Value="False"/>

            <!--Binded properties-->
            <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource Self}, Path=Note}"/>
            <Setter Property="Command" Value="{Binding NoteCommand}"/>
            <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}, Path=Note}"/>

            <!--Triggers-->
            <Style.Triggers>

                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Note.IsChecked}" Value="True">
                    <Setter Property="Background" Value="LightCoral"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Note.IsKeynote}" Value="True">
                    <Setter Property="FontWeight" Value="ExtraBold"/>
                </DataTrigger>

            </Style.Triggers>

        </Style>


        <!--ScaleButton Style and Triggers-->
        <Style TargetType="i:ScaleButton" BasedOn="{StaticResource BaseForNoteAndScaleButtons}">

            <!--Binded properties-->
            <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource Self}, Path=Scale.Name}"/>
            <Setter Property="Command" Value="{Binding ScaleCommand}"/>
            <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}, Path=Scale}"/>

            <!--Trigger-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Scale.IsChecked}" Value="True">
                    <Setter Property="Background" Value="LightCoral"/>
                </DataTrigger>
            </Style.Triggers>
            
        </Style>

    </Window.Resources>



