<Window x:Class="InteractiveMusicScales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractiveMusicScales"
        xmlns:i="clr-namespace:InteractiveMusicScales.Interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Window.Resources>

        <!--Converters-->
        <i:SharpNoteNameConverter  x:Key="SharpNote"/>
        <i:FlatNoteNameConverter   x:Key="FlatNote"/>
        <i:HiddenNoteNameConverter x:Key="HiddenNote"/>
        <i:SemitoneToBoolConverter x:Key="SemitoneToBool"/>

        <!--Colors-->
        <SolidColorBrush x:Key="MenuColor">#D3D3D3</SolidColorBrush>
        <SolidColorBrush x:Key="GrayedPianoKeyColor">#E1E1E1</SolidColorBrush>

        <!--NoteButton Style and Triggers-->
        <Style x:Key="MainNoteButtonStyle" TargetType="i:NoteButton">

            <!--Template rework for changing 'mouse over' highlight effect-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="i:NoteButton">
                        <Border BorderThickness="0.5" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.75"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!--Static properties-->
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Margin" Value="10"/>

            <!--Binded properties-->
            <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource Self}, Path=Note}"/>
            <Setter Property="Command" Value="{Binding NoteCommand}"/>
            <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}, Path=Note}"/>

            <!--Triggers-->
            <Style.Triggers>

                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Note.IsChecked}" Value="True">
                    <Setter Property="Background" Value="LightCoral"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Note.IsKeynote}" Value="True">
                    <Setter Property="FontWeight" Value="ExtraBold"/>
                </DataTrigger>

            </Style.Triggers>

        </Style>

    </Window.Resources>



    <!--===================================Window Layout===================================-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <!--===================================Pianoroll===================================-->
        
        <DockPanel Grid.Column="1" Grid.Row="1" LastChildFill="True" Background="{StaticResource MenuColor}">
            <DockPanel.Resources>
                <!--Radiobutton Style-->
                <Style TargetType="RadioButton">
                    <Setter Property="Margin" Value="15,2,5,2"/>
                </Style>
            </DockPanel.Resources>

            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <RadioButton IsChecked="{Binding PianorollSemitone, Converter={StaticResource SemitoneToBool}, Mode=TwoWay, ConverterParameter=Sharp}">#</RadioButton>
                <RadioButton IsChecked="{Binding PianorollSemitone, Converter={StaticResource SemitoneToBool}, Mode=TwoWay, ConverterParameter=Flat}">b</RadioButton>
            </StackPanel>

            <Grid HorizontalAlignment="Center">

                <Grid.Resources>
                    <!--Grid style-->
                    <Style TargetType="ColumnDefinition">
                        <Setter Property="Width" Value="20"/>
                    </Style>

                    <!--Note button style-->
                    <Style TargetType="i:NoteButton" BasedOn="{StaticResource MainNoteButtonStyle}">
                        <Setter Property="Grid.ColumnSpan" Value="2"/>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PianorollSemitone}" Value="Sharp">
                                <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource Self}, Path=Note, Converter={StaticResource SharpNote}}"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding PianorollSemitone}" Value="Flat">
                                <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource Self}, Path=Note, Converter={StaticResource FlatNote}}"/>
                            </DataTrigger>
                            
                        </Style.Triggers>
                    </Style>
                    
                    <!--Piano key styles-->
                    <Style x:Key="BigZone" TargetType="Border">
                        <Setter Property="Grid.Row" Value="0"/>
                        <Setter Property="Grid.RowSpan" Value="4"/>
                        <Setter Property="Grid.ColumnSpan" Value="14"/>
                    </Style>
                    <Style x:Key="WhitePianoKey" TargetType="Border">
                        <Setter Property="Grid.Row" Value="0"/>
                        <Setter Property="Grid.RowSpan" Value="4"/>
                        <Setter Property="Grid.ColumnSpan" Value="2"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0.5"/>
                    </Style>
                    <Style x:Key="BlackPianoKeyOnWhite" TargetType="Border" BasedOn="{StaticResource WhitePianoKey}">
                        <Setter Property="Grid.RowSpan" Value="2"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="4"/>
                        <Setter Property="Background" Value="Black"/>
                    </Style>
                    <Style x:Key="BlackPianoKeyOnGray" TargetType="Border" BasedOn="{StaticResource BlackPianoKeyOnWhite}">
                        <Setter Property="BorderBrush" Value="{StaticResource GrayedPianoKeyColor}"/>
                    </Style>

                </Grid.Resources>
                
                <Grid.ColumnDefinitions>
                    
                    <!--Left octave-->
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <!--/Left octave-->

                    <!--Center octave-->
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <!--/Center octave-->

                    <!--Right octave-->
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <!--/Right octave-->
                    
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                
                <!--Painting the big zones-->
                <Border Style="{StaticResource BigZone}" Grid.Column="0"  Background="{StaticResource GrayedPianoKeyColor}"/>
                <Border Style="{StaticResource BigZone}" Grid.Column="14" Background="White"/>
                <Border Style="{StaticResource BigZone}" Grid.Column="28" Background="{StaticResource GrayedPianoKeyColor}"/>

                <!--Painting the separate piano keys-->
                <!--White keys-->
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="0"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="2"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="4"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="6"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="8"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="10"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="12"/>

                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="14"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="16"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="18"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="20"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="22"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="24"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="26"/>

                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="28"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="30"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="32"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="34"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="36"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="38"/>
                <Border Style="{StaticResource WhitePianoKey}" Grid.Column="40"/>

                <!--Black keys-->
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="1"/>
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="3"/>
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="7"/>
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="9"/>
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="11"/>

                <Border Style="{StaticResource BlackPianoKeyOnWhite}" Grid.Column="15"/>
                <Border Style="{StaticResource BlackPianoKeyOnWhite}" Grid.Column="17"/>
                <Border Style="{StaticResource BlackPianoKeyOnWhite}" Grid.Column="21"/>
                <Border Style="{StaticResource BlackPianoKeyOnWhite}" Grid.Column="23"/>
                <Border Style="{StaticResource BlackPianoKeyOnWhite}" Grid.Column="25"/>

                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="29"/>
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="31"/>
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="35"/>
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="37"/>
                <Border Style="{StaticResource BlackPianoKeyOnGray}" Grid.Column="39"/>
                <!--/Painting the separate piano keys-->

                <!--Piano buttons-->
                <!--Piano buttons left octave-->
                <i:NoteButton Grid.Column="0"  Grid.Row="3" Note="{Binding Pianoroll[0]}"/>
                <i:NoteButton Grid.Column="1"  Grid.Row="1" Note="{Binding Pianoroll[1]}"/>
                <i:NoteButton Grid.Column="2"  Grid.Row="3" Note="{Binding Pianoroll[2]}"/>
                <i:NoteButton Grid.Column="3"  Grid.Row="1" Note="{Binding Pianoroll[3]}"/>
                <i:NoteButton Grid.Column="4"  Grid.Row="3" Note="{Binding Pianoroll[4]}"/>
                <i:NoteButton Grid.Column="6"  Grid.Row="3" Note="{Binding Pianoroll[5]}"/>
                <i:NoteButton Grid.Column="7"  Grid.Row="1" Note="{Binding Pianoroll[6]}"/>
                <i:NoteButton Grid.Column="8"  Grid.Row="3" Note="{Binding Pianoroll[7]}"/>
                <i:NoteButton Grid.Column="9" Grid.Row="1" Note="{Binding Pianoroll[8]}"/>
                <i:NoteButton Grid.Column="10" Grid.Row="3" Note="{Binding Pianoroll[9]}"/>
                <i:NoteButton Grid.Column="11" Grid.Row="1" Note="{Binding Pianoroll[10]}"/>
                <i:NoteButton Grid.Column="12" Grid.Row="3" Note="{Binding Pianoroll[11]}"/>

                <!--Piano buttons central octave-->
                <i:NoteButton Grid.Column="14" Grid.Row="3" Note="{Binding Pianoroll[0]}"/>
                <i:NoteButton Grid.Column="15" Grid.Row="1" Note="{Binding Pianoroll[1]}"/>
                <i:NoteButton Grid.Column="16" Grid.Row="3" Note="{Binding Pianoroll[2]}"/>
                <i:NoteButton Grid.Column="17" Grid.Row="1" Note="{Binding Pianoroll[3]}"/>
                <i:NoteButton Grid.Column="18" Grid.Row="3" Note="{Binding Pianoroll[4]}"/>
                <i:NoteButton Grid.Column="20" Grid.Row="3" Note="{Binding Pianoroll[5]}"/>
                <i:NoteButton Grid.Column="21" Grid.Row="1" Note="{Binding Pianoroll[6]}"/>
                <i:NoteButton Grid.Column="22" Grid.Row="3" Note="{Binding Pianoroll[7]}"/>
                <i:NoteButton Grid.Column="23" Grid.Row="1" Note="{Binding Pianoroll[8]}"/>
                <i:NoteButton Grid.Column="24" Grid.Row="3" Note="{Binding Pianoroll[9]}"/>
                <i:NoteButton Grid.Column="25" Grid.Row="1" Note="{Binding Pianoroll[10]}"/>
                <i:NoteButton Grid.Column="26" Grid.Row="3" Note="{Binding Pianoroll[11]}"/>

                <!--Piano buttons right octave-->
                <i:NoteButton Grid.Column="28" Grid.Row="3" Note="{Binding Pianoroll[0]}"/>
                <i:NoteButton Grid.Column="29" Grid.Row="1" Note="{Binding Pianoroll[1]}"/>
                <i:NoteButton Grid.Column="30" Grid.Row="3" Note="{Binding Pianoroll[2]}"/>
                <i:NoteButton Grid.Column="31" Grid.Row="1" Note="{Binding Pianoroll[3]}"/>
                <i:NoteButton Grid.Column="32" Grid.Row="3" Note="{Binding Pianoroll[4]}"/>
                <i:NoteButton Grid.Column="34" Grid.Row="3" Note="{Binding Pianoroll[5]}"/>
                <i:NoteButton Grid.Column="35" Grid.Row="1" Note="{Binding Pianoroll[6]}"/>
                <i:NoteButton Grid.Column="36" Grid.Row="3" Note="{Binding Pianoroll[7]}"/>
                <i:NoteButton Grid.Column="37" Grid.Row="1" Note="{Binding Pianoroll[8]}"/>
                <i:NoteButton Grid.Column="38" Grid.Row="3" Note="{Binding Pianoroll[9]}"/>
                <i:NoteButton Grid.Column="39" Grid.Row="1" Note="{Binding Pianoroll[10]}"/>
                <i:NoteButton Grid.Column="40" Grid.Row="3" Note="{Binding Pianoroll[11]}"/>
                <!--/Piano buttons-->

            </Grid>

        </DockPanel>
        <!--/Pianoroll-->
        
        
    </Grid>
    <!--/Window Layout-->    
    
</Window>
